   <% for(var i=item.length-1; i>=0; i--) {%>
           <div class="card" style="width: 18rem;float: left;padding: 5px;margin: 5px" >
            <img class="card-img-top" src="#" alt="Card image cap"><hr>
            <div class="card-body">
              <h5 class="card-title"><%= item[i].name %></h5>
              <h6 class="card-subtitle mb-2 text-muted">Rs. <%= item[i].price %> /kg</h6>
              <p><%= item[i].quality %></p>
              <p class="card-text"><%= item[i].description %></p>
              
              <form action="/cart/additem/" method="post">
                <input type="text" name="item" hidden="hidden" value=<%=item[i].name%>>
                    
                    <% if(user)
                    {%>
                    <input type="text" name="user" hidden="hidden" value=<%=user.cartid%>>
                   <%} %>
                   <input type="number" name="price" hidden="hidden" value=<%=item[i].price%>>
                <input type="number" name="quantity" min=1 value=1 id='quantity' style="float: left;width: 40px">
                <button class="btn btn-primary" style="margin-left: 10px">Add To Cart</button>
              </form>
            </div>
          </div>
         

         <% } %>


</body>