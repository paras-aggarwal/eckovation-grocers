      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span> 
      </button>
      <a class="navbar-brand" href="/">GROCERS</a>
    </div>
    <div class="collapse navbar-collapse" id="myNavbar">
      <ul class="nav navbar-nav navbar-right">
        <% if(!user)
        {%>
        <li><a href="/users/phone"></span>Add Bid</a></li>
        <li><a href="/users/phone"><span class="glyphicon glyphicon-user"></span> Sign Up</a></li>
        <li><a href="/users/login"><span class="glyphicon glyphicon-log-in"></span> Login</a></li>
          
          <%} %>
          <% if(user)
        {%>
          <li><a href="/cart/showcart"></span>cart</a></li>
        
